{
  "name": "cy3-orbit",
  "version": "1.0.0",
  "description": "Chandrayaan-3 Orbit Visualization",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --project=default",
    "test:e2e:fast": "playwright test --project=fast",
    "test:e2e:slow": "playwright test --project=slow",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:workflow": "playwright test e2e-workflow",
    "test:e2e:modes": "playwright test e2e-modes",
    "test:e2e:features": "playwright test e2e-features",
    "test:e2e:errors": "playwright test e2e-error-handling",
    "test:e2e:visual": "playwright test e2e-visual-verification",
    "test:e2e:optimize": "playwright test e2e-optimize",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test && npm run test:e2e:fast",
    "test:release": "npm run test && npm run test:e2e:slow"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@types/three": "^0.152.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^5.4.21",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "astronomy-engine": "^2.1.19",
    "driver.js": "^1.4.0",
    "lil-gui": "^0.18.2",
    "three": "^0.152.2"
  }
}
